<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
           >

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="139dp"
                android:layout_height="500dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/bg_item" />
            <ImageView
                android:id="@+id/circle2"
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="-60dp"
                android:src="@drawable/bg_item2"
                android:translationZ="-1dp"/>


            <ImageView
                android:id="@+id/circle4"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_below="@+id/bgHeader"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-80dp"
                android:layout_marginRight="-100dp"
                android:src="@drawable/circletransparant" />
            <ImageView
                android:id="@+id/circle5"
                android:layout_width="182dp"
                android:layout_height="182dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-150dp"
                android:layout_marginBottom="-30dp"
                android:translationZ="-5dp"
                android:src="@drawable/circletransparant" />

            <TextView
                android:id="@+id/Judul"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textStyle="bold"
                card_view:fontFamily="@font/amaranth"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/alamat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Judul"
                android:layout_alignLeft="@+id/Judul"
                android:paddingTop="5dp"
                android:text="Alamat"
                card_view:fontFamily="@font/amaranth" />

            <TextView
                android:id="@+id/waktu"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alamat"
                android:layout_alignLeft="@+id/alamat"
                android:paddingTop="5dp"
                android:text="Waktu Buka"
                card_view:fontFamily="@font/amaranth" />

            <TextView
                android:id="@+id/free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/Judul"
                android:layout_marginTop="10dp"
                android:text="Free"
                android:textStyle="italic"
                card_view:fontFamily="@font/amaranth" />

            <TextView
                android:id="@+id/freeint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/alamat"
                android:layout_below="@id/free"
                android:text="20/30"
                android:textStyle="italic"
                android:textColor="@color/orange"
                card_view:fontFamily="@font/amaranth" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/waktu"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tombol_book"
                android:text="Booking"
                android:textColor="#fff" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>