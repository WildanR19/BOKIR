<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Riwayat"
    android:background="#f0f0f0"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="5dp"
        android:background="#fff"
        >

        <ImageView
            android:id="@+id/circle1"
            android:layout_width="139dp"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/bg_item" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="-60dp"
            android:src="@drawable/bg_item2"
            android:translationZ="-1dp"/>


        <ImageView
            android:id="@+id/circle4"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_below="@+id/bgHeader"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-80dp"
            android:layout_marginRight="-100dp"
            android:src="@drawable/circletransparant" />
        <ImageView
            android:id="@+id/circle5"
            android:layout_width="182dp"
            android:layout_height="182dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-150dp"
            android:layout_marginBottom="-30dp"
            android:translationZ="-5dp"
            android:src="@drawable/circletransparant" />

        <TextView
            android:id="@+id/Judul"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Parkir Gedung D"
            android:textStyle="bold"
            app:fontFamily="@font/amaranth"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Judul"
            android:layout_alignLeft="@+id/Judul"
            android:paddingTop="5dp"
            android:text="Jl. Sadewa 2 No.8, Pendrikan kidul"
            app:fontFamily="@font/amaranth" />

        <TextView
            android:id="@+id/waktu"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alamat"
            android:layout_alignLeft="@+id/alamat"
            android:paddingTop="5dp"
            android:text="Status : Belum Parkir"
            app:fontFamily="@font/amaranth" />



        <Button
            android:onClick="showDialog"
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/waktu"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/tombol_book"
            android:text="SCAN Qr"
            android:textColor="#fff" />


    </RelativeLayout>

</RelativeLayout>